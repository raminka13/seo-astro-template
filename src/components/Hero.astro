---
interface Props {
  title: string;
  highlightText?: string;
  description: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const {
  title,
  highlightText,
  description,
  primaryButtonText,
  primaryButtonLink,
  secondaryButtonText,
  secondaryButtonLink,
} = Astro.props;
---

<section
  class="relative pt-20 bg-gradient-to-br from-primary-900 to-secondary-900 text-white overflow-hidden"
>
  <div
    class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
  >
  </div>
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 relative z-10"
  >
    <div class="max-w-3xl">
      <h1
        class="text-5xl md:text-7xl font-title font-extrabold tracking-tight mb-6"
      >
        {title}
        {
          highlightText && (
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-400 to-primary-300">
              {highlightText}
            </span>
          )
        }
      </h1>
      <p
        class="text-xl md:text-2xl text-secondary-300 mb-10 leading-relaxed font-light"
      >
        {description}
      </p>
      {
        (primaryButtonText || secondaryButtonText) && (
          <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
            {primaryButtonText && primaryButtonLink && (
              <a
                href={primaryButtonLink}
                class="bg-primary-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary-500 transition-colors shadow-lg shadow-primary-500/30 text-center"
              >
                {primaryButtonText}
              </a>
            )}
            {secondaryButtonText && secondaryButtonLink && (
              <a
                href={secondaryButtonLink}
                class="bg-white/10 backdrop-blur-md text-white border border-white/20 px-8 py-4 rounded-full font-semibold text-lg hover:bg-white/20 transition-colors text-center"
              >
                {secondaryButtonText}
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</section>
