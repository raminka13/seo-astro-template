---
import {
  SITE_TITLE,
  SOCIAL_TWITTER,
  SOCIAL_GITHUB,
  SOCIAL_LINKEDIN,
} from '../consts';
const year = new Date().getFullYear();
---

<footer
  class="bg-secondary-950 border-t border-secondary-800 text-white mt-auto"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="col-span-1 md:col-span-1">
        <span
          class="text-3xl font-title font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-accent-400"
          >{SITE_TITLE}</span
        >
        <p class="mt-4 text-secondary-400 text-sm leading-relaxed">
          A premium, SEO-optimized template tailored for ultimate performance,
          accessibility, and dynamic React components.
        </p>
      </div>
      <div>
        <h3
          class="font-title font-semibold text-white tracking-wider uppercase mb-6"
        >
          Quick Links
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/about-us"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="/services"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >Services</a
            >
          </li>
          <li>
            <a
              href="/blog"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >Blog</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3
          class="font-title font-semibold text-white tracking-wider uppercase mb-6"
        >
          Support
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/contact-us"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >Contact Us</a
            >
          </li>
          <li>
            <a
              href="/faq"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >FAQ</a
            >
          </li>
          <li>
            <a
              href="/privacy"
              class="text-secondary-400 hover:text-primary-400 transition-colors text-sm"
              >Privacy Policy</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3
          class="font-title font-semibold text-white tracking-wider uppercase mb-6"
        >
          Newsletter
        </h3>
        <p class="text-secondary-400 text-sm mb-4">
          Subscribe to get the latest updates.
        </p>
        <form class="flex" onsubmit="event.preventDefault()">
          <input
            type="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2.5 rounded-l-lg bg-secondary-900 border border-secondary-800 text-white focus:outline-none focus:border-primary-500 transition-colors"
            required
          />
          <button
            type="submit"
            class="bg-primary-600 px-6 py-2.5 rounded-r-lg hover:bg-primary-500 transition-colors font-medium"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    <div
      class="mt-16 pt-8 border-t border-secondary-800 flex flex-col md:flex-row justify-between items-center text-sm text-secondary-500"
    >
      <p>&copy; {year} {SITE_TITLE}. All rights reserved.</p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a
          href={SOCIAL_TWITTER}
          class="hover:text-white transition-colors"
          target="_blank"
          rel="noopener noreferrer">Twitter</a
        >
        <a
          href={SOCIAL_GITHUB}
          class="hover:text-white transition-colors"
          target="_blank"
          rel="noopener noreferrer">GitHub</a
        >
        <a
          href={SOCIAL_LINKEDIN}
          class="hover:text-white transition-colors"
          target="_blank"
          rel="noopener noreferrer">LinkedIn</a
        >
      </div>
    </div>
  </div>
</footer>
