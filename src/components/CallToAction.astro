---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
}

const { title, description, buttonText, buttonLink } = Astro.props;
---

<section class="py-24 bg-white relative overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div
      class="bg-gradient-to-br from-primary-900 to-secondary-900 rounded-3xl p-10 md:p-16 lg:p-20 text-center shadow-2xl border border-primary-800 relative overflow-hidden"
    >
      <!-- Decorative background elements -->
      <div
        class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-primary-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-accent-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"
      >
      </div>

      <div class="relative z-10 max-w-3xl mx-auto">
        <h2
          class="text-3xl md:text-5xl font-title font-extrabold text-white mb-6 leading-tight"
        >
          {title}
        </h2>
        <p class="text-xl text-primary-100 mb-10 font-light leading-relaxed">
          {description}
        </p>
        <a
          href={buttonLink}
          class="inline-block bg-white text-primary-900 px-8 py-4 rounded-full font-bold text-lg hover:bg-primary-50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 shadow-lg"
        >
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>
