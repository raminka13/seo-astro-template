---
export interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title: string;
  subtitle: string;
  features: Feature[];
}

const { title, subtitle, features } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2
        class="text-3xl md:text-4xl font-title font-bold text-secondary-900 mb-4"
      >
        {title}
      </h2>
      <p class="text-lg text-secondary-600">
        {subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {
        features.map((feature) => (
          <div class="p-8 rounded-2xl bg-secondary-50 border border-secondary-100 hover:-translate-y-2 transition-transform duration-300">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center text-primary-600 mb-6">
              <svg
                class="w-8 h-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                set:html={feature.icon}
              />
            </div>
            <h3 class="text-xl font-bold font-title mb-3">{feature.title}</h3>
            <p class="text-secondary-600">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
