<button
  type="button"
  class="theme-toggle p-2 rounded-lg text-secondary-600 hover:text-primary-600 hover:bg-secondary-100 dark:text-secondary-400 dark:hover:text-primary-400 dark:hover:bg-secondary-800 transition-colors focus:outline-none"
  aria-label="Toggle theme"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="theme-icon-light w-5 h-5 hidden"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg
    class="theme-icon-dark w-5 h-5 hidden"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
  <!-- Auto icon (shown in auto mode) -->
  <svg
    class="theme-icon-auto w-5 h-5 hidden"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
    ></path>
  </svg>
</button>

<script>
  function initThemeToggles() {
    const toggles = document.querySelectorAll('.theme-toggle');

    function getThemePreference(): 'light' | 'dark' | 'auto' {
      return (localStorage.getItem('theme') as 'light' | 'dark' | 'auto') || 'auto';
    }

    function getEffectiveTheme(pref: 'light' | 'dark' | 'auto'): 'light' | 'dark' {
      if (pref === 'auto') {
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }
      return pref;
    }

    function applyTheme(pref: 'light' | 'dark' | 'auto') {
      const effective = getEffectiveTheme(pref);
      document.documentElement.classList.toggle('dark', effective === 'dark');
    }

    function updateIcons(pref: 'light' | 'dark' | 'auto') {
      document.querySelectorAll('.theme-icon-light').forEach(el => el.classList.toggle('hidden', pref !== 'dark'));
      document.querySelectorAll('.theme-icon-dark').forEach(el => el.classList.toggle('hidden', pref !== 'light'));
      document.querySelectorAll('.theme-icon-auto').forEach(el => el.classList.toggle('hidden', pref !== 'auto'));
    }

    function cycleTheme() {
      const current = getThemePreference();
      const next = current === 'light' ? 'dark' : current === 'dark' ? 'auto' : 'light';
      localStorage.setItem('theme', next);
      applyTheme(next);
      updateIcons(next);
      toggles.forEach(t => t.setAttribute('aria-label', `Theme: ${next}`));
    }

    // Initialize
    const pref = getThemePreference();
    applyTheme(pref);
    updateIcons(pref);
    toggles.forEach(t => {
      t.setAttribute('aria-label', `Theme: ${pref}`);
      t.addEventListener('click', cycleTheme);
    });

    // Listen for system theme changes (applies when in auto mode)
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      if (getThemePreference() === 'auto') {
        applyTheme('auto');
        updateIcons('auto');
      }
    });
  }

  // Run on initial load and on Astro page transitions
  initThemeToggles();
  document.addEventListener('astro:after-swap', initThemeToggles);
</script>
