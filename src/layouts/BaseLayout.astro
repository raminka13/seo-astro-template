---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  schema?: string;
  image?: string;
}

const { title, description, keywords, schema, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script is:inline>
      (function() {
        const pref = localStorage.getItem('theme') || 'auto';
        const isDark = pref === 'dark' || (pref === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (isDark) document.documentElement.classList.add('dark');
      })();
    </script>
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      schema={schema}
      image={image}
    />
  </head>
  <body class="bg-primary-50 text-secondary-900 dark:bg-secondary-950 dark:text-secondary-100 font-content antialiased flex flex-col min-h-screen transition-colors duration-200">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
