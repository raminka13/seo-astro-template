---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';
---

<BaseLayout
  title={`Page Not Found | ${SITE_TITLE}`}
  description="The page you're looking for doesn't exist."
>
  <section class="container mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 text-center">
    <h1 class="text-8xl md:text-9xl font-title font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-accent-500 mb-6">
      404
    </h1>
    <h2 class="text-2xl md:text-3xl font-title font-bold text-secondary-900 dark:text-secondary-100 mb-4">
      Page Not Found
    </h2>
    <p class="text-lg text-secondary-600 dark:text-secondary-400 mb-10 max-w-md mx-auto">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-block bg-primary-600 text-white px-8 py-3.5 rounded-full font-medium hover:bg-primary-500 transition-colors shadow-md"
    >
      Back to Home
    </a>
  </section>
</BaseLayout>
