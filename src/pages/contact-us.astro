---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ContactForm from '../components/ContactForm';
import FAQs from '../components/FAQs.astro';
import { SITE_TITLE, CONTACT_EMAIL } from '../consts';

const crumbs = [
  { label: 'Home', url: '/' },
  { label: 'Contact Us', url: '/contact-us' },
];

const faqs = [
  {
    question: 'How fast do you reply to inquiries?',
    answer:
      'Our standard response time is within 24 hours during business days (Monday through Friday).',
  },
  {
    question: 'Do you offer custom template modifications?',
    answer:
      'Yes, our team can help you customize the layout and design based on your brand guidelines.',
  },
  {
    question: 'Where is the webhook data stored?',
    answer:
      'Since this is a client integration, all form submissions go exactly to the webhook URL you specify in your environment, completely bypassing any intermediate servers we run.',
  },
  {
    question: 'What CRM systems do you support?',
    answer:
      'Any CRM that supports incoming POST webhook requests works seamlessly with our forms including HubSpot, Salesforce, and Zapier.',
  },
];
---

<BaseLayout
  title={`Contact Us | ${SITE_TITLE}`}
  description="Get in touch with us for your next project."
  keywords="contact, support, help, reach out"
>
  <Breadcrumbs crumbs={crumbs} />

  <section class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-6xl mx-auto items-start"
    >
      <!-- Contact Info & FAQs -->
      <div>
        <div class="mb-12">
          <h1
            class="text-4xl md:text-5xl font-title font-bold mb-6 text-secondary-900 dark:text-secondary-100"
          >
            Let's Talk
          </h1>
          <p class="text-secondary-600 dark:text-secondary-400 text-lg leading-relaxed">
            Whether you have a question about our templates or want to discuss a
            full custom build, our team is ready to answer all your questions.
          </p>
        </div>

        <div
          class="bg-primary-100 dark:bg-primary-900/50 p-8 rounded-2xl border border-primary-200 dark:border-primary-800 mb-12"
        >
          <h3 class="text-xl font-title font-bold text-primary-900 dark:text-primary-200 mb-4">
            Direct Communication
          </h3>
          <ul class="space-y-4">
            <li class="flex items-center text-primary-800 dark:text-primary-300">
              <svg
                class="w-5 h-5 mr-3"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path></svg
              >
              {CONTACT_EMAIL}
            </li>
            <li class="flex items-center text-primary-800 dark:text-primary-300">
              <svg
                class="w-5 h-5 mr-3"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path></svg
              >
              +1 (555) 123-4567
            </li>
          </ul>
        </div>
      </div>

      <!-- React Form component -->
      <div>
        <ContactForm client:load />
      </div>
    </div>
  </section>

  <!-- Full Width FAQs -->
  <div id="faq" class="mt-24 pt-16 border-t border-secondary-200 dark:border-secondary-700">
    <FAQs faqs={faqs} />
  </div>
</BaseLayout>
