---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { SITE_TITLE } from '../consts';

const crumbs = [
  { label: 'Home', url: '/' },
  { label: 'Blog', url: '/blog' },
];

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
    b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<BaseLayout
  title={`Blog | ${SITE_TITLE}`}
  description="Read our latest articles on web performance and SEO."
  keywords="blog, news, articles, seo tips"
>
  <Breadcrumbs crumbs={crumbs} />
  <section
    class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 max-w-6xl"
  >
    <div class="text-center mb-16">
      <h1
        class="text-4xl md:text-5xl font-title font-bold mb-6 text-secondary-900"
      >
        Latest Articles
      </h1>
      <div class="w-20 h-1 bg-primary-500 mx-auto rounded-full"></div>
      <p class="mt-6 text-secondary-600 text-lg">
        Insights and perspectives from our engineering team.
      </p>
    </div>

    {
      sortedPosts.length === 0 ? (
        <div class="text-center py-32 bg-secondary-50 border border-secondary-100 rounded-3xl shadow-inner">
          <svg
            class="w-16 h-16 text-secondary-300 mx-auto mb-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5L18.5 7H20a2 2 0 012 2v10a2 2 0 01-2 2H19"
            />
          </svg>
          <h3 class="text-2xl font-title font-bold text-secondary-900 mb-2">
            No posts yet
          </h3>
          <p class="text-secondary-500 text-lg">
            We are busy writing amazing content. Check back soon!
          </p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post: CollectionEntry<'blog'>) => (
            <a
              href={`/blog/${post.slug}`}
              class="group flex flex-col h-full bg-white rounded-2xl border border-secondary-200 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
            >
              <div class="p-8 flex-grow flex flex-col">
                <div class="mb-4 flex items-center gap-2">
                  <span class="text-sm font-semibold text-primary-600 bg-primary-50 px-3 py-1 rounded-full">
                    {post.data.tags?.[0] || 'Article'}
                  </span>
                  <span class="text-sm text-secondary-500">
                    {post.data.date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </span>
                </div>
                <h2 class="text-2xl font-bold font-title mb-3 text-secondary-900 group-hover:text-primary-600 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-secondary-600 mb-6 flex-grow leading-relaxed">
                  {post.data.description}
                </p>
                <div class="mt-auto flex items-center text-primary-600 font-semibold group-hover:text-primary-500">
                  Read Article
                  <svg
                    class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      )
    }
  </section>
</BaseLayout>
